<Window x:Class="MyPrroj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPrroj"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="400">
    <Grid Background="LightGray">
        <Button x:Name="btnRun" Content="Enable" Width="100" Height="50" HorizontalAlignment="Center" Click="Run_Procces" Background="White"/>
        <Button x:Name="btnReturn" Content="Disable" Width="100" Height="50" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Click="btnReturn_Click" Background="White" Margin="40"/>
    </Grid>
</Window>
